<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/login_other_way"
                android:textColor="@color/textColorGray"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/colorDivider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:id="@+id/login_wx_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.smartydroid.android.starter.kit.widget.ForegroundImageView
                    android:id="@+id/image_login_qq"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/login_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/login_wx"
                    android:textColor="@color/textColorGray"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/login_qq_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.smartydroid.android.starter.kit.widget.ForegroundImageView
                    android:id="@+id/image_login_wechat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/login_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/login_qq"
                    android:textColor="@color/textColorGray"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_sina_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.smartydroid.android.starter.kit.widget.ForegroundImageView
                    android:id="@+id/image_login_weibo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/login_xl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/login_sina"
                    android:textColor="@color/textColorGray"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</merge>