<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notify_item_root_view"
    android:orientation="vertical"
    android:background="#00000000"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.NotificationActivity">


    <RelativeLayout
        android:id="@+id/rank_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:background="@drawable/bg_rank_grey_transparent"
        android:padding="10dp">

        <TextView
            android:id="@+id/rank_ranking_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:background="@drawable/rank_first"
            android:layout_centerVertical="true"
            android:gravity="center"
            tools:text="4"/>

        <ImageView
            android:id="@+id/rank_avatar_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/rank_ranking_num_tv"
            android:src="@drawable/rank_default_avatar"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rank_avatar_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/rank_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="Vicky10252"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/rank_timer_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/main_notification"/>

            <TextView
                android:id="@+id/rank_total_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/textColorYellowLight"
                android:textSize="16sp"
                android:text="20:25:00"/>



        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#00000000"
        android:layout_below="@id/rank_item_layout"/>
</RelativeLayout>