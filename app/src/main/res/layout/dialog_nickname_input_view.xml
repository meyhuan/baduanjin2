<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorGray"
        android:textSize="18sp"
        android:text="@string/setting_set_nickname"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/container_setting_input_nickname_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/setting_input_nickname_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterMaxLength="8"
            android:maxLength="8"
            android:singleLine="true"
            style="@style/EditViewTextStyle"
            android:hint="@string/setting_input_nickname"/>
    </android.support.design.widget.TextInputLayout>


</LinearLayout>